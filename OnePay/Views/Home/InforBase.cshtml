<div class="modal-header">
    <a class="close" onclick="closeModal()">&times;</a>
    <h3>Tài khoản cấu hình(OnePAY cấp)</h3>
</div>
<div class="modal-body">
    <div class="alert alert-info">Account config</div>
    <div class="form-horizontal">
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">MERCHANTID</span>
            </div>
            <div class="controls">
                @Html.TextBox("merchantId", "TESTONEPAYUSD", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Access code</span>
            </div>
            <div class="controls">
                @Html.TextBox("accessCode", "614240F4", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Hash code</span>
            </div>
            <div class="controls">
                @Html.TextBox("hashCode", "18D7EC3F36DF842B42E1AA729E4AB010", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Url Paygate</span>
            </div>
            <div class="controls">
                @Html.TextBox("urlPaygate", "http://mtf.onepay.vn/vpcpay/vpcpay.op", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
    </div>

    <div class="alert alert-info">Required Info</div>
    <div class="form-horizontal">
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Order Info</span>
            </div>
            <div class="controls">
                @Html.TextBox("orderInfo", "TEST_1383625409979-1079718776", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Merchant Transaction reference</span>
            </div>
            <div class="controls">
                @Html.TextBox("merchantTransactionReference", "TEST_1383625409979-1079718776", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Amount</span>
            </div>
            <div class="controls">
                @Html.TextBox("amount", "200000", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Again link(unused)</span>
            </div>
            <div class="controls">
                @Html.TextBox("againLink", "onepay.vn", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Title (unused)</span>
            </div>
            <div class="controls">
                @Html.TextBox("title", "onepay.vn", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Paygate's Language</span>
            </div>
            <div class="controls">
                @Html.TextBox("language", "en", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Module's Version</span>
            </div>
            <div class="controls">
                @Html.TextBox("moduleVersion", "2", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Command</span>
            </div>
            <div class="controls">
                @Html.TextBox("command", "pay", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">IP client</span>
            </div>
            <div class="controls">
                @Html.TextBox("ip", "192.168.429.129", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Url Return</span>
            </div>
            <div class="controls">
                @Html.TextBox("urReturn", "http://mtf.onepay.vn/developer/?page=demo_quocte", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
    </div>

    <div class="alert alert-info">Shipping info (optional)</div>
    <div class="form-horizontal">
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Address</span>
            </div>
            <div class="controls">
                @Html.TextBox("address", "194 Tran Quang Khai", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">State/Province</span>
            </div>
            <div class="controls">
                @Html.TextBox("province", "Hoankiem", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">City</span>
            </div>
            <div class="controls">
                @Html.TextBox("city", "Ha Noi", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Country</span>
            </div>
            <div class="controls">
                @Html.TextBox("country", "Viet Nam", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Customer's Phone</span>
            </div>
            <div class="controls">
                @Html.TextBox("customerPhone", "043999998", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Customer's Email</span>
            </div>
            <div class="controls">
                @Html.TextBox("customerEmail", "support@onepay.vn", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Customer's ID</span>
            </div>
            <div class="controls">
                @Html.TextBox("customerID", "thanhvt", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
    </div>

    <div class="alert alert-info">Billing info (Auto filled on paygate)</div>
    <div class="form-horizontal">
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Street</span>
            </div>
            <div class="controls">
                @Html.TextBox("streetOnPay", "194 Tran Quang Khai", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">City</span>
            </div>
            <div class="controls">
                @Html.TextBox("cityOnPay", "Ha Noi", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">State/Province</span>
            </div>
            <div class="controls">
                @Html.TextBox("provinceOnPay", "Hoan Kiem", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Post/Zip Code</span>
            </div>
            <div class="controls">
                @Html.TextBox("zipCode", "10000", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <span class="control-label">Country (ISO 2)</span>
            </div>
            <div class="controls">
                @Html.TextBox("countryISO2", "VN", new { @class = "input-xlarge", @readonly = "readonly" })
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" onclick="closeModal()">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
</div>
